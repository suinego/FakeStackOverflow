<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/questionsFragment">

    <fragment
        android:id="@+id/questionsFragment"
       android:name="com.example.app.hz"
        android:label="Вопросы"
        tools:layout="@layout/fragment_questions">

        <action
            android:id="@+id/action_questionstodetail"
            app:destination="@id/questionDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/questionDetailFragment"
        android:name="com.example.app.hz"
        android:label="Детали Вопроса"
        tools:layout="@layout/fragment_question_detail">

        <argument
            android:name="questionId"
            app:argType="integer" />
    </fragment>

</navigation>